{
  "name": "modality-lang-wasm",
  "version": "0.1.5",
  "description": "Modality language parser compiled to WebAssembly",
  "main": "dist/modality_lang.js",
  "types": "dist/modality_lang.d.ts",
  "files": [
    "dist/"
  ],
  "scripts": {
    "build": "wasm-pack build --target web --out-dir dist",
    "build-node": "wasm-pack build --target nodejs --out-dir dist-node",
    "build-bundler": "wasm-pack build --target bundler --out-dir dist-bundler",
    "test": "wasm-pack test --headless --firefox",
    "clean": "rm -rf dist dist-node dist-bundler"
  },
  "keywords": [
    "modality",
    "parser",
    "temporal-logic",
    "wasm",
    "webassembly"
  ],
  "author": "Modality Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/modality-org/modality"
  },
  "devDependencies": {
    "wasm-pack": "^0.12.1"
  }
} 